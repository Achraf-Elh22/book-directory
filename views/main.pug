extends base

block content
  div(class="container full-height")
    h1 Books
    a(href="/addBooks") Add Books
    table(class="u-full-width")
        thead
          tr
            th Title
            th Author
            th ISBN
            th 
        tbody(id="book-list")
            each book in books
              tr
                td=book.title
                td=book.author
                td=book.isbn
                td 
                  a(href="#" class="delete") X